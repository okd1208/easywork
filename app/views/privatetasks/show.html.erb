<div class="text-center border rounded">
  <% deadline_time = @task.deadline %>
  <% create_time = @task.created_at %>
  <div class="media-body">
      <p>期限：<%= "#{deadline_time.year}/#{deadline_time.month}/#{deadline_time.day}" %>
      <span class="text-muted"> 設定日：<%= "#{create_time.year}/#{create_time.month}/#{create_time.day}" %></span></p>
  </div>
  <div>
      <p><%= link_to @task.task,"/privatetasks/#{@task.id}", class: "text-dark" %></p>
  </div>
  <div>
    <% if current_user == @task.user %>
      <%= render 'privatetasks/progress', p_task: @task %>
      <%= link_to "削除", @task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-secondary btn-sm' %>
      <p><%= link_to("編集","/privatetasks/#{@task.id}/edit") %></p>
    <% end %>
      <p><%= link_to("タスク一覧ページ","/users/#{@user.id}") %></p>
  </div>
</div> 